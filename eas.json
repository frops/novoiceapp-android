{
  "cli": {
    "version": ">= 3.19.0"
  },
  "build": {
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "distribution": "store",
      "channel": "production",
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {}
  },
  "hooks": {
    "pre-build": {
      "command": "node scripts/increment-build-number.js --platform=$EAS_BUILD_PLATFORM"
    }
  }
}
